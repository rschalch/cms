<!DOCTYPE html>
<html>
  <head>
    <title>Simple Cms | <%= @page_title || 'Admin' %></title>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
    <style>
	    span.status {
		    display: block;
		    width: 10px;
		    height: 10px;
		    margin: 0.25em auto;
		    padding: 0;
		    border: 1px solid black;
	    }

	    span.status.true {
		    background: green;
		    color: green;
	    }

	    span.status.false {
		    background: red;
		    color: red;
	    }

    </style>
  </head>
  <body>
    <div id="header">
      <h1>Simple CMS Admin</h1>
    </div>

    <div id="main">
      <% unless flash[:notice].blank? %>
        <div><%= flash[:notice] %></div>
      <% end %>
      <div id="content">
        <%= yield %>
      </div>
    </div>

    <div id="footer">
      <p id="copyright">&copy; RBS.com</p>
    </div>

  </body>
</html>
