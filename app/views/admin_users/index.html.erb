<% @page_title = 'Admin Users' %>
<div class="index">
  <%= link_to 'Main', {controller: :access} %>
  <h2>Admin Users</h2>
  <%= link_to 'Add New Admin User', {action: :new}, class: 'action new' %>
  <% if @users.any? %>
      <table class="listing" summary="Admin Users List">
        <tr class="header">
          <th>&nbsp;</th>
          <th>Name</th>
          <th>Email</th>
          <th>Username</th>
          <th>Password</th>
          <th>Actions</th>
        </tr>
        <% @users.each.with_index do |user, index| %>
            <tr>
              <td><%= index %></td>
              <td><%= user.name %></td>
              <td><%= user.email %></td>
              <td><%= user.username %></td>
              <td><%= user.password_digest %></td>
              <td class="actions">
                <%= link_to 'Edit', {action: :edit, :id => user.id}, class: 'action edit' %>
                <%= link_to 'Delete', {action: :delete, :id => user.id}, class: 'action delete' %>
              </td>
            </tr>
        <% end %>
      </table>
      <div class="listing">We have <%= pluralize(@users.count, 'user') %></div>
  <% end %>
</div>
