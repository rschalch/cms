<% @page_title = @page.name %>
<h2><%= @page.name %></h2>

<% @page.sections.sorted.each do |section|  %>
    <div class="section">
      <% case section.content_type  %>
    <% when 'HTML' %>
        <%= raw(sanitize(section.content, :tags => %w(strong em a))) %>
    <% when 'text' %>
        <p><%= section.content %></p>
        <%  %>
    <% end %>
    </div>
<% end %>
